        const emojis = [
            "üöÄ", "üåô", "ü™ê", "üëΩ", "‚òÑÔ∏è", "üåü",
            "üåå", "üõ∞Ô∏è", "üåû", "üåç", "üß≤", "‚ö°",
            "üî•", "üíé", "üß™", "üìê", "üìò", "üß†"
        ];
        /* ===== GAME LOGIC ===== */
        function shuffle(a) { for (let i = a.length - 1; i > 0; i--) { let j = Math.floor(Math.random() * (i + 1));[a[i], a[j]] = [a[j], a[i]] } }


        shuffle(questions);

        const values = [];
        emojis.forEach(e => values.push(e, e));
        shuffle(values);




        const board = document.getElementById("game-board");
        let first = null, second = null, lock = false, queue = [...questions];
        let matchedPair = [];
        for (let i = 0; i < 36; i++) {
            const c = document.createElement("div");
            c.className = "card";
            c.dataset.value = values[i];
            c.innerHTML = `
  <div class="card-face card-back">${i + 1}</div>
  <div class="card-face card-front">
    <span class="emoji">${values[i]}</span>
  </div>
`;
            c.onclick = () => clickCard(c);
            board.appendChild(c);
        }

        function clickCard(card) {
            if (lock || card === first || card.classList.contains("is-flipped")) return;
            card.classList.add("is-flipped");
            if (!first) { first = card; return; }
            second = card; lock = true;

            if (first.dataset.value === second.dataset.value) {
                matchedPair = [first, second];
                setTimeout(showQuestion, 300);
            } else {
                setTimeout(() => {
                    first.classList.remove("is-flipped");
                    second.classList.remove("is-flipped");
                    reset();
                }, 800);
            }
        }
        function reset() { first = second = null; lock = false }
        
        function showQuestion() {
            const q = queue.shift(); if (!q) return reset();
            document.getElementById("question-text").textContent = q.question;
            const list = document.getElementById("options-list");
            const res = document.getElementById("question-result");
            list.innerHTML = ""; res.textContent = "";
            q.options.forEach((o, i) => {
                const b = document.createElement("button");
                b.textContent = o;
                b.onclick = () => {
                    b.className = i === q.correct ? "correct" : "wrong";
                    res.textContent = q.explanation;
                };
                list.appendChild(b);
            });
            document.getElementById("question-overlay").style.display = "flex";
        }

        function closeQuestion() {
            document.getElementById("question-overlay").style.display = "none";

            if (matchedPair.length) {
                matchedPair.forEach(card => {
                    card.classList.add("matched");
                });
                matchedPair = [];
            }
            reset();
        }
    </script>

</body>

</html>
